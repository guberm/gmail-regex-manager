{
  "env": { "browser": true, "es2021": true, "jest": true },
  "extends": ["eslint:recommended"],
  "parserOptions": { "ecmaVersion": "latest", "sourceType": "module" },
  "rules": {
    "no-unused-vars": ["warn", { "args": "none" }],
    "no-undef": "error",
    "eqeqeq": ["warn", "always"],
    "curly": ["warn", "all"],
    "semi": ["error", "always"],
    "quotes": ["warn", "single", { "avoidEscape": true }]
  }
}
